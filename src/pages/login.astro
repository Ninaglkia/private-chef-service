---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Login - Private Chef Service">
  <div class="min-h-screen bg-black text-white flex flex-col justify-center px-4">
    <div class="mx-auto w-full max-w-sm">
      <div class="flex justify-end mb-8">
        <a href="/signup" class="text-xs font-medium px-3 py-1.5 rounded-full border border-neutral-700 hover:bg-white hover:text-black transition-colors">
          Sign Up
        </a>
      </div>

      <h2 class="text-3xl font-semibold text-center">Log in</h2>
      <p class="mt-2 text-center text-sm text-neutral-400">
        Accedi al tuo account Private Chef
      </p>

      <div class="mt-8 rounded-2xl border border-neutral-800 bg-black/60 px-5 py-6 space-y-6">
        <form class="space-y-4" id="login-form">
          <div>
            <label for="email" class="block text-xs font-medium text-neutral-300 mb-1">Email</label>
            <input
              id="email"
              name="email"
              type="email"
              autocomplete="email"
              required
              class="block w-full rounded-lg border border-neutral-800 bg-black px-3 py-2.5 text-sm text-white placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-neutral-500 focus:border-neutral-500"
              placeholder="you@example.com"
            />
          </div>

          <div>
            <label for="password" class="block text-xs font-medium text-neutral-300 mb-1">Password</label>
            <input
              id="password"
              name="password"
              type="password"
              autocomplete="current-password"
              required
              class="block w-full rounded-lg border border-neutral-800 bg-black px-3 py-2.5 text-sm text-white placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-neutral-500 focus:border-neutral-500"
              placeholder="••••••••"
            />
          </div>

          <button
            type="submit"
            class="w-full mt-2 rounded-lg bg-white py-2.5 text-sm font-medium text-black hover:bg-neutral-200 transition-colors"
          >
            Continue with Email
          </button>
        </form>

        <div class="relative">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-neutral-800"></div>
          </div>
          <div class="relative flex justify-center text-xs">
            <span class="bg-black px-2 text-neutral-500">Oppure continua con</span>
          </div>
        </div>

        <div class="space-y-3">
          <button
            id="google-login"
            class="w-full inline-flex items-center justify-center gap-2 rounded-lg border border-neutral-800 bg-black py-2.5 text-sm font-medium text-white hover:bg-neutral-900 transition-colors"
          >
            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12.545,10.239v3.821h5.445c-0.712,2.315-2.647,3.972-5.445,3.972c-3.332,0-6.033-2.701-6.033-6.032s2.701-6.032,6.033-6.032c1.498,0,2.866,0.549,3.921,1.453l2.814-2.814C17.503,2.988,15.139,2,12.545,2C7.021,2,2.543,6.477,2.543,12s4.478,10,10.002,10c8.396,0,10.249-7.85,9.426-11.748L12.545,10.239z"/>
            </svg>
            Continue with Google
          </button>
        </div>

        <button
          id="toggle-phone"
          class="w-full text-center text-xs text-neutral-500 hover:text-white transition-colors"
        >
          Vuoi accedere con il numero di telefono?
        </button>

        <form class="space-y-4 hidden" id="phone-form">
          <div>
            <label for="phone" class="block text-xs font-medium text-neutral-300 mb-1">Numero di telefono (es. +39...)"</label>
            <input
              id="phone"
              name="phone"
              type="tel"
              autocomplete="tel"
              placeholder="+39 333 1234567"
              class="block w-full rounded-lg border border-neutral-800 bg-black px-3 py-2.5 text-sm text-white placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-neutral-500 focus:border-neutral-500"
            />
          </div>

          <button
            type="submit"
            class="w-full rounded-lg bg-white py-2.5 text-sm font-medium text-black hover:bg-neutral-200 transition-colors"
          >
            Invia codice OTP
          </button>
        </form>
      </div>

      <p class="mt-6 text-center text-xs text-neutral-500">
        Non hai un account?
        <a href="/signup" class="font-medium text-white hover:underline">Sign Up</a>
      </p>
    </div>
  </div>
</Layout>

<script>
  import { supabase } from '../lib/supabase';

  // Google Login
  const googleBtn = document.getElementById('google-login');
  googleBtn?.addEventListener('click', async () => {
    const { error } = await supabase.auth.signInWithOAuth({
      provider: 'google',
      options: {
        redirectTo: `${window.location.origin}/dashboard`,
      },
    });
    if (error) alert(error.message);
  });

  // Email Login
  const loginForm = document.getElementById('login-form') as HTMLFormElement;
  loginForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(loginForm);
    const email = formData.get('email') as string;
    const password = formData.get('password') as string;

    const { error } = await supabase.auth.signInWithPassword({
      email,
      password,
    });

    if (error) {
      alert(error.message);
    } else {
      window.location.href = '/dashboard';
    }
  });

  // Phone Login Toggle
  const togglePhone = document.getElementById('toggle-phone');
  const phoneForm = document.getElementById('phone-form');
  const emailForm = document.getElementById('login-form');
  
  togglePhone?.addEventListener('click', () => {
    phoneForm?.classList.toggle('hidden');
    emailForm?.classList.toggle('hidden');
    if (phoneForm?.classList.contains('hidden')) {
        togglePhone.textContent = 'Vuoi accedere con il numero di telefono?';
    } else {
        togglePhone.textContent = 'Vuoi accedere con email e password?';
    }
  });

  // Phone Login
  const phoneLoginForm = document.getElementById('phone-form') as HTMLFormElement;
  phoneLoginForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(phoneLoginForm);
    const phone = formData.get('phone') as string;

    const { error } = await supabase.auth.signInWithOtp({
      phone,
    });

    if (error) {
        alert(error.message);
    } else {
        const otp = prompt('Inserisci il codice ricevuto via SMS:');
        if (otp) {
            const { error: verifyError } = await supabase.auth.verifyOtp({
                phone,
                token: otp,
                type: 'sms',
            });
            if (verifyError) {
                alert(verifyError.message);
            } else {
                window.location.href = '/dashboard';
            }
        }
    }
  });

</script>
