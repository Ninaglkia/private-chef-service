---
const images = [
  {
    src: "https://images.unsplash.com/photo-1414235077428-338989a2e8c0?auto=format&fit=crop&w=1920&q=80",
    alt: "Gourmet fine dining presentation"
  },
  {
    src: "https://images.unsplash.com/photo-1600565193348-f74bd3c7ccdf?auto=format&fit=crop&w=1920&q=80",
    alt: "Professional kitchen team in action"
  },
  {
    src: "https://images.unsplash.com/photo-1504674900247-0877df9cc836?auto=format&fit=crop&w=1920&q=80",
    alt: "Fresh premium ingredients and dishes"
  },
  {
    src: "https://images.unsplash.com/photo-1559339352-11d035aa65de?auto=format&fit=crop&w=1920&q=80",
    alt: "Elegant plated salmon dish"
  }
];
---

<div class="absolute inset-0 z-0 overflow-hidden" id="hero-carousel">
  {images.map((image, index) => (
    <div 
      class={`absolute inset-0 transition-opacity duration-1000 ease-in-out ${index === 0 ? 'opacity-100' : 'opacity-0'} carousel-slide`}
      data-index={index}
    >
      <div class="absolute inset-0 bg-gradient-to-br from-gray-900/85 via-gray-900/75 to-gray-800/85 z-10"></div>
      <img
        src={image.src}
        alt={image.alt}
        class="w-full h-full object-cover"
      />
    </div>
  ))}
  
  <!-- Indicators -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20 flex space-x-3">
    {images.map((_, index) => (
      <button
        class={`w-3 h-3 rounded-full transition-all duration-300 ${index === 0 ? 'bg-gold-500 w-8' : 'bg-white/50 hover:bg-white'}`}
        aria-label={`Go to slide ${index + 1}`}
        data-slide={index}
      ></button>
    ))}
  </div>
</div>

<script>
  function setupCarousel() {
    const slides = document.querySelectorAll('.carousel-slide');
    const indicators = document.querySelectorAll('[data-slide]');
    
    if (slides.length === 0) return;

    let currentSlide = 0;
    const totalSlides = slides.length;
    const intervalTime = 5000; // 5 seconds

    function showSlide(index: number) {
      // Hide all slides
      slides.forEach(slide => {
        slide.classList.remove('opacity-100');
        slide.classList.add('opacity-0');
      });
      
      // Reset indicators
      indicators.forEach(ind => {
        ind.classList.remove('bg-gold-500', 'w-8');
        ind.classList.add('bg-white/50');
      });

      // Show current slide
      if (slides[index]) {
        slides[index].classList.remove('opacity-0');
        slides[index].classList.add('opacity-100');
      }
      
      // Update indicator
      if (indicators[index]) {
        indicators[index].classList.remove('bg-white/50');
        indicators[index].classList.add('bg-gold-500', 'w-8');
      }
      
      currentSlide = index;
    }

    function nextSlide() {
      const next = (currentSlide + 1) % totalSlides;
      showSlide(next);
    }

    // Auto play
    const interval = setInterval(nextSlide, intervalTime);

    // Manual navigation
    indicators.forEach(indicator => {
      indicator.addEventListener('click', () => {
        const slideAttr = indicator.getAttribute('data-slide');
        if (slideAttr !== null) {
            const index = parseInt(slideAttr, 10);
            showSlide(index);
        }
      });
    });
  }

  // Run setup when DOM is ready
  document.addEventListener('DOMContentLoaded', setupCarousel);
  // Also run immediately in case DOM is already ready (e.g. view transitions)
  setupCarousel();
</script>
